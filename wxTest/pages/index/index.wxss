/**index.wxss**/
.quit{
  position: absolute;
  right: 60rpx;
  top: 100rpx;
  background: rgb(0, 89, 255);
  color: #fff;
  /* width: 100rpx; */
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  text-align: center;
  font-size: 30rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 30px;
}

.book-table {
  margin-top: 50rpx;
}

.book-tr {

}

.book-th {
  border: 1px solid #ccc;
  border-right: none;
  border-bottom: none;
  padding: 10rpx;
  font-weight: 600;
  width: 150rpx;
}

.book-td {
  border: 1px solid #ccc;
  border-right: none;
  border-bottom: none;
  padding: 10rpx;
  color: #999;
  width: 150rpx;  
}

.book-th:last-child, .book-td:last-child {
  border-right: 1px solid #ccc;
}

.book-tr:last-child {
  border-bottom: 1px solid #ccc;
}
